# ============================================================================
# TRAVEL MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL
POSTGRES_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres

# Redis
REDIS_PASSWORD=redis

# Neo4j
NEO4J_PASSWORD=neo4j123
NEO4J_AUTH=neo4j/neo4j123
NEO4J_URI=bolt://localhost:7688
NEO4J_INTERNAL_URI=bolt://neo4j:7687
NEO4J_USERNAME=neo4j
NEO4J_DATABASE=neo4j

# Elasticsearch
ELASTICSEARCH_URIS=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================

# JWT Configuration (CHANGE IN PRODUCTION!)
# Minimum 32 characters recommended
JWT_SECRET=your-secret-key-minimum-32-characters-for-production-security
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ============================================================================
# PAYMENT GATEWAYS
# ============================================================================

# Stripe
STRIPE_API_KEY=sk_test_your_stripe_api_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# ============================================================================
# OBJECT STORAGE (MinIO)
# ============================================================================

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENABLED=true
MINIO_URL=http://localhost:9001
MINIO_PUBLIC_URL=http://localhost:9001
MINIO_INTERNAL_URL=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=travelms-users

# ============================================================================
# MESSAGE BROKER (Kafka)
# ============================================================================

KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Grafana
GRAFANA_PASSWORD=admin

# Prometheus (uses defaults - no config needed)

# ============================================================================
# APPLICATION PROFILES
# ============================================================================

# Spring Profiles (dev, prod, docker)
SPRING_PROFILES_ACTIVE=dev

# ============================================================================
# MICROSERVICES PORTS
# ============================================================================

# Service Discovery
EUREKA_SERVER=http://localhost:8761/eureka/

# Microservices Internal URLs
TRAVEL_SERVICE_URL=http://localhost:9083
PAYMENT_SERVICE_URL=http://localhost:9084
FEEDBACK_SERVICE_URL=http://localhost:9085
USER_SERVICE_URL=http://localhost:9082

# ============================================================================
# CI/CD CONFIGURATION (Optional)
# ============================================================================

# SonarQube
SONAR_HOST_URL=http://localhost:9000
SONAR_LOGIN=admin
SONAR_PASSWORD=admin

# Jenkins (uses defaults - no config needed)

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment and set these for production deployment

# SSL_KEYSTORE_PASSWORD=your_keystore_password
# SSL_KEYSTORE_TYPE=PKCS12
# SSL_KEYSTORE_PATH=classpath:keystore.p12

# VAULT_TOKEN=your_vault_token
# VAULT_HOST=localhost
# VAULT_PORT=8200

# ============================================================================
# NOTES
# ============================================================================
# 1. Generate strong JWT_SECRET in production: openssl rand -base64 64
# 2. Use environment-specific values for dev/staging/prod
# 3. Store sensitive values in HashiCorp Vault for production
# 4. Enable SSL/TLS for all services in production
# 5. Use strong passwords for all database services
# ============================================================================
